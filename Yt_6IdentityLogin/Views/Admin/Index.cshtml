@model List<Yt_6IdentityLogin.Models.Domain.ApplicationUser>

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">User List </h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" asp-controller="Admin" class="btn btn-primary">Create New User</a>
    </div>
</div>
<div class="p-4 border rounded">
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    Name
                </th>
                <th>
                    UserName
                </th>
                <th>
                    Email
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.UserName
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        <div class="text-center">
                            <form asp-action="Delete" asp-controller="Admin" asp-route-userId="@item.Id">
                                <a asp-action="Edit" asp-controller="Admin" asp-route-userId="@item.Id" class="btn btn-info text-white">
                                    Edit
                                </a>

                                <button type="submit" onclick="return confirm('Are you sure you want to delete this?')"
                                class="btn btn-danger">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </table>
    }
</div>